<style>
    nav {
        z-index: 100;
        padding: 10px;
        width: 100%;
        position: absolute;
        display: flex;
        justify-content: center;
        align-items: center;
        background: rgb(0,0,0);
        background: linear-gradient(180deg, rgba(0,0,0,0.38809520390187324) 0%, rgba(255,255,255,0) 100%);
        font-weight: bold;
    }


    .nav-header {
        display: inline;
    }

    .nav-titlebicolor {
        display: inline-block;
        font-size: 22px;
        color: #6b705c;
        padding: 10px 10px 10px 10px;
        font-weight: bolder;
    }

    .nav-btn {
        display: none;
    }

    .nav-linksbicolor {
        display: flex;
        flex-direction: row;
        font-size: 18px;
        align-items: center;
        width: 100%;
        justify-content: space-between;
        margin: 20px 20px 0px 20px;
    }
    .nav-linksbicolor a .active {
        color: #6B705C;
    }
    .linkcolorbicolor {
        color: #ffffff;
    }
    .nav-linksbicolor a {
        display: inline-block;
        text-decoration: none;
    }

    .nav-linksbicolor a:hover {
        color: #6B705C;
    }
    #nav-check {
        display: none;
    }
    img {
        width: 100%;
    }

    .badge {
        position: absolute;
        top: 20px;
        padding: 10px 12px;
        border-radius: 60%;
        background: #B98FCF;
        color: white;
    }


    @media (max-width:690px) {
        nav {
            background-color: white;
        }
        .nav-linksbicolor a {
            margin-top: 10px;
        }
        .nav-linksbicolor {
            background-color: rgb(255, 255, 255);
        }

        nav {
            height: 70px;
            width: 100%;
            position: relative;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .nav-btn {
            right: 0px;
            top: 0px;
            display: flex;
            align-items: center;
        }
        label {
            display: flex;
        }
        .nav-btn label {
            display: inline-block;
            width: 50px;
            height: 50px;
            padding: 13px;
        }
        .nav-btn label:hover,.nav  #nav-check:checked ~ .nav-btn > label {
            color: #6B705C;
        }
        .nav-btn label span {
            display: block;
            width: 25px;
            height: 10px;
            border-top: 2px solid rgb(0, 0, 0);
        }
        .nav-linksbicolor {
            position: absolute;
            display: block;
            width: 100%;
            height: 0px;
            transition: all 0.3s ease;
            overflow-y: hidden;
            top: 70px;
            left: 0px;
        }
        .nav-linksbicolor a {
            display: block;
            width: 100%;
            color: black;
        }
        #nav-check:not(:checked) ~ .nav-links {
            height: 0px;
        }
        #nav-check:checked ~ .nav-links {
            height: calc(100vh - 50px);
            overflow-y: auto;
        }
        img {
            width: 100%;
        }

    }
    @media (min-width:690px) {

        .navcenter a {
            margin: 0px 20px 0px 20px;
        }

        .buttonnavbicolor {
            color: rgb(255, 255, 255);
            background-color: rgb(0, 0, 0);
            border-radius: 25px;
            padding: 15px 20px 15px 20px;
            font-size: 0.9rem;
        }
        .buttonnav2bicolor {
            color: rgb(255, 255, 255);
            background-color: rgb(0, 0, 0);
            border-radius: 25px;
            padding: 15px 40px 15px 40px;
            font-size: 0.9rem;
        }
    }


</style>
<header>
    <nav>
        <input type="checkbox" id="nav-check">
        <div class="nav-header">

        </div>
        <div class="nav-btn">
            <label for="nav-check">
                <span></span>
                <span></span>
                <span></span>
            </label>
        </div>
        <div class="nav-linksbicolor">
            <a class="navlogo nav-titlebicolor linkcolorbicolor" href="{{ path('app_accueil') }}">OUHPUNAISE</a>
            <div class="navcenter">
                <a class="navlinkblack linkcolorbicolor" href="{{ path('app_recherche') }}">Recherche</a>
                <a class="navlinkblack linkcolorbicolor" href="{{ path('app_affichage') }}">Billeterie</a>
                <a class="buttonnav2bicolor" href="{{ path('app_login') }}">LOG IN</a>
            </div>
            <a class="buttonnavbicolor" href="{{ path('app_panier') }}">MON PANIER
                <span class="badge">0</span></a>
        </div>
    </nav>
</header>