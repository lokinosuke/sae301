.genrecast {
    display: flex;
    align-items: center;
    gap: 5%;
}
h5 {
    FONT-SIZE: 55px;
    font-weight: bold;
    margin-top: 25px;
}

.lieuadr {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}
.detail {
    gap: 10%;
    align-items: center;
    display: flex;
    margin-top: 30px;
    margin-bottom: 30px;
}

.p-detail {
    display: flex;
}

.sectionundetail {
    min-height:100vh ;
    background-image: url("{{ asset("assets/images/#{ manif.affiche }") }}");
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    display: flex;
    align-items: flex-end;
}

.alldetail {
    background-color: rgba(0, 0, 0, 0.850);
    height: min-content;
    color: white;
    border-radius: 50px 50px 0px 0px;
    padding: 4rem;
    margin-top: 150px;
}

.buttonbas {
    display: flex;
    align-items: center;
    margin-top: 50px;
    gap: 2%;
}

.continuerachat {
    border: 1px solid #FFFFFF;
    border-radius: 15px;
    width: 200px;
    padding: 5px;
}

#map {
    margin-right: 5px;
}

#time-five {
    margin-right: 5px;
}

#prix {
    font-size: 30px;
    font-weight: bold;
}



    </style>
<div class="sectionundetail">
<div class="carddetail">
    <div class="alldetail">
    <div class="genrecast">
        {% if manif.genre == 'Théâtre' %}
            <div class="txt-container5">
                <p>{{ manif.genre }}</p>
            </div>
        {% elseif manif.genre == 'Cinéma' %}
            <div class="txt-container4">
                <p>{{ manif.genre }}</p>
            </div>
        {% elseif manif.genre == 'Concert' %}
            <div class="txt-container2">
                <p>{{ manif.genre }}</p>
            </div>
        {% elseif manif.genre == 'Exposition' %}
            <div class="txt-container3">
                <p>{{ manif.genre }}</p>
            </div>
        {% endif %}
                <p style="margin: 0px">Avec : {{ manif.casting }}</p>
    </div>
    <div>
                <h5 > {{ manif.titre}} </h5>
    </div>
    <div class="detail">
                 <div>
                <p class="p-detail"><box-icon name='time-five' id='time-five' color='#ffffff'></box-icon>{{ manif.date |date("d/m/Y H:i")}}</p>
                 </div>
                <div class="lieuadr">
                <p class="p-detail"><box-icon name='map' id='map' color='#ffffff'></box-icon>{{ manif.derouler.endroit }}, {{ manif.derouler.adresse}} </p>
                </div>
    </div>
    <div>
                    <p>{{ manif.description}} </p>
    </div>
                <p id="prix">{{ manif.prix }} €</p>
        <div class="buttonbas">
    <div class="link-container">

        {% if manif.genre == 'Théâtre' %}
            <div class="link-container5" >
                <a href="tel:+123456789" style="text-align: center; text-decoration: none;"><p style="margin: 0px;text-decoration: none;color: white;">Ajouter au panier</p></a>
            </div>
        {% elseif manif.genre == 'Cinéma' %}
            <div class="link-container4">
                <a href="tel:+123456789" style="text-align: center; text-decoration: none;"><p style="margin: 0px;text-decoration: none;color: white;">Ajouter au panier</p></a>
            </div>
        {% elseif manif.genre == 'Concert' %}
            <div class="link-container2">
                <a href="tel:+123456789" style="text-align: center; text-decoration: none;"><p style="margin: 0px;text-decoration: none;color: white;">Ajouter au panier</p></a>
            </div>
        {% elseif manif.genre == 'Exposition' %}
            <div class="link-container3">
                <a href="tel:+123456789" style="text-align: center; text-decoration: none;"><p style="margin: 0px;text-decoration: none;color: white;">Ajouter au panier</p></a>
            </div>
        {% endif %}
    </div>
            <a class="continuerachat" href="{{ path("app_affichage")}}" style="text-align: center; text-decoration: none;"><p style=" margin: 0px;text-decoration: none;color: white;">Continuer mes achats</p></a>

        </div>
</div>
</div>
