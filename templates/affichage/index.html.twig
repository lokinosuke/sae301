            right: 800px;
            top: 300px;
            background: #5079BE;
        } */

        @media (max-width: 640px) {

            html,body {
                overflow-x: hidden;
            }

            .card {
                display: flex;
                margin: 0 auto;
                margin-top: 20px;
                width: 25rem;
            }

            .card-container {
                display: flex;
                margin: 0 auto;
                flex-wrap: wrap;
                margin-bottom: 50px;
            }

            .panier-achat {
                margin-top: 30px;
            }
        }


    </style>

    <h1 id="titre-page">Les spectacles</h1>

    <div class="card-container">
{% for manif in manifs %}
    <a id="article-lien" href="{{ path("app_affichagedetail",{id:manif.id}) }}">
        <div class="card rounded-5 overflow-hidden shadow-sm" style="width: 25rem;">
            <img src="{{ asset("assets/images/#{ manif.affiche }") }}" class="card-img-top card-img" alt="concert makala" height="200rem">
            {% if manif.genre == 'Théâtre' %}
                <div class="text-container5">
                    <p class="card-text4 fs-6">{{ manif.genre }}</p>
                </div>
            {% elseif manif.genre == 'Cinéma' %}
                <div class="text-container4">
                    <p class="card-text4 fs-6">{{ manif.genre }}</p>
                </div>
            {% elseif manif.genre == 'Concert' %}
                <div class="text-container2">
                    <p class="card-text4 fs-6">{{ manif.genre }}</p>
                </div>
            {% elseif manif.genre == 'Exposition' %}
                <div class="text-container3">
                    <p class="card-text4 fs-6">{{ manif.genre }}</p>
                </div>
            {% endif %}
            <div class="card-body" href="{{ path("app_affichagedetail",{id:manif.id}) }}">
                <h5 class="card-title text-start" id="article">{{ manif.titre}} - {{ manif.derouler.endroit }}</h5>
                <p class="card-text1 fs-6 text-start">{{ manif.date |date("d/m/Y H:i")}}</p>
                {% if manif.prix == '0.00' %}
                    <p class="card-text3 fs-2 text-start" id="prix">GRATUIT</p>
                {% else %}
                    <p class="card-text3 fs-2 text-start" id="prix">{{ manif.prix }}€</p>
                {% endif %}
                <div class="text-container">
                    <a href="{{ path("app_affichagedetail",{id:manif.id}) }}"><p class="card-text2 fs-6">Voir les details</p></a>
                </div>
            </div>
        </div>
    </a>

{% endfor %}
    </div>

    </div>
{% endblock %}
