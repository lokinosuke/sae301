{% extends 'basevariant.html.twig' %}

{% block title %}Billeterie{% endblock %}

{% block body %}

    <style>

        html,body {
            overflow-x: hidden;
            caret-color: transparent;
            background-color: #eee;
        }

        .section-card {
            display: flex;
            margin: 0 auto;
            margin-top: 50px;
        }

        .card-container {
            display: flex;
            margin: 0 auto;
            flex-wrap: wrap;
            width: 70%;
            margin-top: 60px;
        }

        .card-img {
            object-fit: cover;
            filter: brightness(0.5);
        }

        .card-title {
            padding-left: 20px;
            font-weight: bold;
        }

        .card {
            display: flex;
            margin: 0 auto;
            margin-bottom: 50px;
        }

        .card-text1 {
            padding-left: 20px;
            color: gray;
            font-weight: bold;
        }

        .text-container {
            margin-left: 20px;
            background-color: black;
            border-radius: 15px;
            width: 140px;
        }

        .text-container2 {
            margin-left: 20px;
            background-color: #3EB57C;
            border-radius: 15px;
            width: 100px;
            position: absolute;
            top: 25px;
            height: 30px;
        }

        .text-container3 {
            margin-left: 20px;
            background-color: #3E8AB5;
            border-radius: 15px;
            width: 100px;
            position: absolute;
            top: 25px;
            height: 30px;
        }

        .text-container4 {
            margin-left: 20px;
            background-color: #B53E3E;
            border-radius: 15px;
            width: 100px;
            position: absolute;
            top: 25px;
            height: 30px;
        }

        .text-container5 {
            margin-left: 20px;
            background-color: #784F86;
            border-radius: 15px;
            width: 100px;
            position: absolute;
            top: 25px;
            height: 30px;
        }




        .card-text2 {
            text-align: center;
            color: white;
            font-weight: bold;
            padding: 3px;

        }

        .card-text4 {
            text-align: center;
            color: white;
            font-weight: bold;
            padding: 3px;

        }

        .card-text3 {
            padding-left: 20px;
            font-weight: bold;
        }

        a {
            text-decoration: none;
            color: black;
        }
        a:hover {
            color: black;
        }

        #details {
            text-align: center;
            margin-bottom: 20px;
            font-size: 20px;
        }

        .btn {
            background-color: black;
        }

        .card-title1 {
            margin: 40px;
            font-weight: bold;
            text-align: center;
        }

        .card1 {
            margin: 50px 100px 50px 100px;
        }


        .btn {
            display: flex;
            border-radius: 20px;
            text-align: center;
        }

        #cercle {
            position: absolute;
            width: 2000px;
            height: 2000px;
            border-radius: 1000px;
            left: 250px;
            bottom: 1px;
            background: #B98FCF;
        }

        #titre-page {
            text-align: center;
            background-color: black;
            padding: 10px;
            color: white;
            width: 350px;
            margin: 0 auto;
            border-radius: 20px;
            margin-top: 50px;
            font-family: Arial;
            font-weight: bold;
        }

            /* #cercle2 {
            position: relative;
