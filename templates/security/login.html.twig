{% extends 'baselogin.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}


    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        <br>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <style>

        html {
            overflow-x: hidden;
        }

        .login {
            background: rgb(1,82,151);
            background: linear-gradient(135deg, rgba(1,82,151,1) 0%, rgba(254,163,207,1) 100%);

        }

        .right-container {
            background-color: white;
            padding: 100px;
            border-radius: 50px 0px 0px 50px;
        }

        .title {
            margin: 100px 0px 100px 0px;
            text-align: center;
        }

        @media only screen and (min-width: 768px){
            .colmd7 {
                flex: 0 0 auto;
            }}
        @media only screen and (max-width: 768px){
            .colmd7 {
                flex: 0 0 auto;
                width: 100%;
            }}
    </style>
    <section class="login">
        <!--  <img class="rightlogin" src="{{ asset('assets/images/rightlogin.png') }}" alt=""> -->
        <div class="container-login">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <p class="img-fluid title fw-bold" style="font-size: 4rem; color: #FFFFFF">Votre compte, <br>
                        <span style="color: black">Vos envies. </span></p>
                </div>

                <div class="colmd7 col-lg-5 col-xl-5 offset-xl-1 right-container" style="z-index: 1;">
                    <div class="d-flex justify-content-around align-items-center mb-4" style="flex-direction: column;">
                    <p class="fw-bold" style="font-size: 50px;">Se connecter</p>
                    <p class="" style="color:#666666;font-size: 25px;">Accéder à votre compte</p>
                    </div>
                    <form method="post">
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control form-control-lg" autocomplete="email" required autofocus/>
                            <label class="form-label" for="form1Example13">Email address</label>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <input type="password" name="password" id="form1Example23" class="form-control form-control-lg" autocomplete="current-password" required />
                            <label class="form-label" for="inputPassword">Password</label>
                        </div>


                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-lg btn-block" style="background-color: #1B202C;border: black;width: 100%;">Se connecter</button>

                        <div class="d-flex justify-content-around align-items-center mb-4">
                            <p class="text-center mx-3 mb-0 text-muted" style="margin-top: 20px;color:#666666;">Pas encore de compte ?</p>
                        </div>

                        <a class="btn btn-primary btn-lg btn-block" style="background-color: #1B202C;border: black;width: 100%;" href="{{ path('app_signin') }}"  role="button"> Créer un compte</a>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    </form>
                </div>
            </div>
        </div>

    </section>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
{% endblock %}
